/*CSS for the Tabbed Part*/

.profile
{
	width: 800px;
	margin-top:50px;
	margin-left:50px;
	clear:both;
	font-size:16px;
	font-family:Quicksand Book;
}

ul.tabs {
	margin:0px;
 	margin-bottom: 8px;
 	padding: 0;
 	float: left;
 	list-style: none;
 	height: 0px;

}
ul.tabs li {
	left:0px;
	width:190px;
	margin-bottom: 3px;
 	padding: 0;
 	position: relative;
 	background-color: #211f1c;
 	border-radius: 5px 0 0 5px;
	text-align:center;
	transition: left 0.3s, width 0.3s;
	-moz-transition:left 0.3s, width 0.3s;
	-webkit-transition: left 0.3s, width 0.3s;
}

ul.tabs li:hover {
	left:-10px;
	width:190px;
 	position: relative;
 	background-color: #211f1c;
 	border-radius: 5px 0 0 5px;
	transition: left 0.3s, width 0.3s;
	-moz-transition:left 0.3s, width 0.3s;
	-webkit-transition: left 0.3s, width 0.3s;
}


ul.tabs li a, ul.tabs li a:hover{
 	text-decoration: none;
 	display: block;
 	padding: 10px;
 	outline: none;
	font-size:18px;
	color:#ff1922;
}

 ul.tabs li.active, ul.tabs li.active a, ul.tabs li.active a:hover  { 
	left:-10px;
	width:190px;
 	color:#211f1c;
 	background: #fff;
 	border-radius: 5px 0 0 5px;
}
.tab_container {
	min-height:480px;
	position:relative;
	top:-20px;
	float:right;
 	width: 620px;
 	background: #fff;
	border-radius: 5px;
	box-shadow: 0 3px 3px rgba(0,0,0,0.1);

}
.tab_content {
 	padding: 30px;
	font-size:16px;
}
