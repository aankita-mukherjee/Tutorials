@charset "utf-8";

/* Body */
body{
	width:1000px;
	margin:0 auto;
	background-color:transparent;
	text-align:justify;
}

body a{
	transition-property : color; 
  	transition-duration : 0.3s;
}

body a:active{
	background:transparent;
}

body ::selection {
	background-color:#2c3230;
	color: #ffffff;
}

body div{
	display:block;
	float:left;
	vertical-align:bottom;
}

a:active{
	background:transparent;
}

/* Fonts */
@font-face{
	font-family: YK;
	src: url('/resources/fonts/yanonekaffeesatz-regular-webfont.woff'), url('/resources/fonts/yanonekaffeesatz-regular-webfont.eot'), url('/resources/fonts/yanonekaffeesatz-regular-webfont.ttf'), url('/resources/fonts/yanonekaffeesatz-regular-webfont.svg');
}

@font-face{
	font-family: Quicksand Book;
	src:url('/resources/fonts/Quicksand_Book-webfont.woff'), url('/resources/fonts/Quicksand_Book-webfont.eot'), url('/resources/fonts/Quicksand_Book-webfont.svg'),url('/resources/fonts/Quicksand_Book-webfont.ttf')
	;
}

/* Background colours */
body #pg1{
	background-color:#d9dade;
	width: 900px;
	height:484.1628000000001px;
	clear:both;
}

body #pg2{
	background-color:#2c3230;
	width: 900px;
	height:631px;
	clear:both;
}

body #pg2 ::selection {
	background-color:#95040b;
	color: #ffffff;
}

body #pg2 a{
	color:#bc0100;
	text-decoration:none;
}

body #pg2 a:hover{
	color:#ffffff;
	text-decoration:none;
	
}

body #pg3{
	background-color:#95040b;
	width: 900px;
	height:auto;
	clear:both;
	
}

body #pg3 a{
	color:#e8b414;
	text-decoration:none;
	transition-property : color; 
  	transition-duration : 0.3s;
}

body #pg3 a:hover{
	color:#ffffff;
	text-decoration:none;
}

body #pg4{
	background-color:#d9dade;
	width: 900px;
	height:auto;
	clear:both;
}

body #pg5{
	background-color:#211f1c;
	width: 900px;
	height:auto;
	clear:both;
}

body #pg5 a{
	color:#ff1922;
	text-decoration:none;
	
}

body #pg5 a:hover{
	color:white;
	text-decoration:none;
}

/* Headers */
body h1 {
	color: #95040b;
	font-family: Quicksand Book;
	font-size: 52.08px;
	letter-space: -0.02em;
	text-align: right;
}

body h2 {
	font-family: Quicksand Book;
	font-size: 43.4px;
	line-height: 32.55px;
	letter-space: -0.04em;
}

body h3 {
	font-family: Quicksand Book;
	font-size: 41.23px;
	line-height: 47.74px;
	letter-space: -0.04em;
}

/* Text types */
body p1 {
	font-family: Quicksand Book;
	font-size: 30.38px;
	line-height: 32.55px;
	letter-space: -0.04em;
}

body p2 {
	font-family: Quicksand Book;
	font-size: 26.04px;
	line-height: 26.04px;
	letter-space: -0.04em;
}

body p3 {
	font-family: Quicksand Book;
	font-size: 23.87px;
	line-height: 26.04px;
	letter-space: -0.02em;
}

body .content{
	padding: 100px 50px;
	overflow:auto;
}

/* Back to top sticky button */
body #backtotop{
	position:fixed;
	bottom:30px;
	margin-left:900px;
	z-index:9999;
}

body #backtotop a img{
	opacity:0.7;
	transition-property : opacity; 
  	transition-duration : 0.3s;
	width:50px;
}

body #backtotop a img:hover{
	opacity:1;
	transition-property : opacity; 
  	transition-duration : 0.3s;
	width:50px;
}

